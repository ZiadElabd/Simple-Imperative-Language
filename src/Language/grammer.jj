//BExp  →  tt | ff | (AExp == AExp) | ! BExp | (BExp ^ BExp)
void BExp(): { }
{
  "tt"
  | 
  "ff"
  |
   <LPAREN> select()
  | 
  <NOT> BExp()
}
void select(): { }
{
  (AEXp() < COMPARE> AEXp())  < RPAREN>
 |
  (BExp() <AND> BExp())  < RPAREN>
